@page "/login"

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5 bg-white">
                <div class="card-body">
                    <h3 class="card-title text-center">Iniciar sesión</h3>

                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">Correo electrónico</label>

                        <div class="input-group">
                            <span class="input-group-text bg-primary text-white"><span class="oi oi-envelope-closed"></span></span>
                            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Ingrese su correo electrónico">
                        </div>

                    </div>

                    <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">Contraseña</label>

                        <div class="input-group">
                            <span class="input-group-text bg-primary text-white"><span class="oi oi-lock-locked"></span></span>
                            <input type="@passwordInputType" class="form-control" id="exampleInputPassword1" placeholder="Ingrese su contraseña">
                            <button class="btn btn-outline-primary" @onclick="TogglePasswordVisibility">
                                <span class="@passwordIconClass"></span>
                            </button>
                        </div>
                    </div>

                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label" for="exampleCheck1">Recuérdame</label>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">
                            <span class="oi oi-account-login"></span> Entrar
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private bool showPassword = false;

    private string passwordInputType => showPassword ? "text" : "password";
    private string passwordIconClass => showPassword ? "oi oi-eye-slash" : "oi oi-eye";

    private void TogglePasswordVisibility()
    {
        showPassword = !showPassword;
    }
}
